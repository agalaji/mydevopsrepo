{% extends 'base.j2' %}

{% block title %}Pass Fail Dialog{% endblock %}

{% block content %}
<div class="container">
  <br>
  <div class="row justify-content-sm-center align-items-center">
    <div class="col-lg-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">The Test Case Information</h3>
        </div>
        <div class="panel-body">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Item</th>
                <th scope="col">Description</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">Test Case Name</th>
                <td>001-I-AM-BEGINNER</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <br>
      <form class="form-inline" method=post>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Robot Framework</h3>
          </div>
          <div class="panel-body">{{ message }}</div>
          <div class="panel-footer">
            <button type="submit" class="btn btn-default" name="result" value="PASS">PASS</button>
            <button type="submit" class="btn btn-default" name="result" value="FAIL">FAIL</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
